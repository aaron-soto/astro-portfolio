---
import { SOCIAL_LINKS } from "../lib/data";
import AaronLogo from "./AaronLogo.astro";
import BackToTop from "./BackToTop.tsx";

const currentYear = new Date().getFullYear();

const links = [
  { name: "work", href: "/projects" },
  { name: "about", href: "/about" },
  { name: "blog", href: "/blog" },
  { name: "contact", href: "/contact" },
];
---

<div class="relative">
  <div
    class="absolute bottom-full inset-x-0 h-20 bg-[linear-gradient(to_bottom,transparent_0%,black_90%)]"
  >
  </div>
</div>
<footer class="container pt-10 pb-12 bg-black">
  <div class="grid grid-cols-1 md:grid-cols-8 gap-8 mb-8">
    <!-- Logo + Tagline -->
    <div class="col-span-1 md:col-span-3">
      <AaronLogo variant="footer" />
      <p class="text-foreground-muted text-sm mt-4 max-w-xs">
        Building fast, reliable websites and custom software for small
        businesses.
      </p>
    </div>

    <!-- Quick Links -->
    <nav class="col-span-1 md:col-span-2 md:col-start-5">
      <h3 class="text-white text-sm font-semibold mb-3 tracking-wide">
        quick links
      </h3>
      <ul class="flex flex-col gap-2">
        {
          links.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-foreground-muted hover:text-primary transition-colors text-sm"
              >
                {link.name}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>

    <!-- Contact Info -->
    <div class="col-span-1 md:col-span-2">
      <h3 class="text-white text-sm font-semibold mb-3 tracking-wide">
        get in touch
      </h3>
      <ul class="flex flex-col gap-2 text-sm">
        <li>
          <a
            href="mailto:aaron@ayezeewebdesigns.com"
            class="text-foreground-muted hover:text-primary transition-colors"
          >
            aaron@ayezeewebdesigns.com
          </a>
        </li>
        <li class="text-foreground-muted">casa grande, az</li>
        <li>
          <a
            href="https://ayezeewebdesigns.com"
            target="_blank"
            class="text-foreground-muted hover:text-primary transition-colors"
          >
            ayezee web designs â†’
          </a>
        </li>
      </ul>
    </div>
  </div>

  <!-- Divider -->
  <div class="h-px bg-lines mb-6"></div>

  <!-- Bottom Row: Copyright + Social -->
  <div class="flex flex-col md:flex-row items-center justify-between gap-4">
    <p class="text-foreground-muted text-sm order-2 md:order-1">
      &copy; {currentYear} Aaron Soto. All rights reserved.
    </p>

    <ul class="flex gap-2 order-1 md:order-2">
      <li>
        <a
          href={SOCIAL_LINKS.github.url}
          title="GitHub"
          target="_blank"
          rel="noopener noreferrer"
          class="bg-neutral-950 size-10 grid place-items-center hover:bg-neutral-800 transition-all"
          ><SOCIAL_LINKS.github.icon class="size-5" /></a
        >
      </li>
      <li>
        <a
          href={SOCIAL_LINKS.instagram.url}
          title="Instagram"
          target="_blank"
          rel="noopener noreferrer"
          class="bg-neutral-950 size-10 grid place-items-center hover:bg-neutral-800 transition-all"
          ><SOCIAL_LINKS.instagram.icon class="size-5" /></a
        >
      </li>
      <li>
        <a
          href={SOCIAL_LINKS.facebook.url}
          title="Facebook"
          target="_blank"
          rel="noopener noreferrer"
          class="bg-neutral-950 size-10 grid place-items-center hover:bg-neutral-800 transition-all"
          ><SOCIAL_LINKS.facebook.icon class="size-5" /></a
        >
      </li>
      <li>
        <a
          href={SOCIAL_LINKS.pinterest.url}
          title="Pinterest"
          target="_blank"
          rel="noopener noreferrer"
          class="bg-neutral-950 size-10 grid place-items-center hover:bg-neutral-800 transition-all"
          ><SOCIAL_LINKS.pinterest.icon class="size-5" /></a
        >
      </li>

      <BackToTop client:load />
    </ul>
  </div>
</footer>
