---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const workPosts = await getCollection("work");
---

<Layout
  title="Projects by Aaron Soto"
  description="Explore a curated selection of projects developed by Aaron Soto, showcasing his expertise in web development and software solutions."
>
  <div class="container">
    <div class="slide-up mb-12">
      <h1>projects.</h1>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-8">
      {
        workPosts.map((project: any) => (
          <a
            href={`/projects/${project.data.slug}`}
            class="border border-lines rounded p-6 hover:border-primary bg-black/1 backdrop-blur-xs transition-colors block"
          >
            <div class="flex flex-col">
              <div class="bg-white rounded-full size-16 grid place-items-center mr-3 relative">
                {project.data.logo && (
                  <img
                    src={project.data.logo}
                    alt={`${project.data.title} logo`}
                    class="size-12"
                  />
                )}
              </div>
              <h3 class="text-lg! mt-2 font-semibold">{project.data.title}</h3>
            </div>

            <p class="text-foreground-muted text-base mt-2 mb-4">
              {project.data.description}
            </p>
          </a>
        ))
      }
    </div>

    <div class="text-center mt-16 mb-20">
      <p class="text-foreground-muted mb-6">
        Want to see more of my work or discuss a project?
      </p>
      <a
        href="/contact"
        class="inline-block bg-black text-foreground-muted px-16 border border-lines py-3 hover:bg-neutral-950 transition-colors"
      >
        Get in touch
      </a>
    </div>
  </div>
</Layout>
