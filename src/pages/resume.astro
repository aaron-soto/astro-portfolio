---
import DownloadFile from "../components/icons/DownloadFile.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Aaron Soto's Resume"
  description="Download and view the professional resume of Aaron Soto, a seasoned developer with expertise in web development and software engineering."
>
  <div class="container grid grid-cols-4 md:grid-cols-8">
    <h1 class="col-span-full">resume.</h1>

    <div class="mx-auto col-span-4 md:col-span-6 md:col-start-2">
      <!-- Download Resume Button -->
      <div class="text-center mb-20 mt-12">
        <a
          href="/resume.pdf"
          download="AaronSotoResume.pdf"
          class="inline-flex items-center gap-2 bg-black/1 backdrop-blur-sm border border-lines text-white px-9 py-3 hover:text-primary hover:border-primary transition-colors"
        >
          <DownloadFile />
          Download Resume
        </a>
      </div>

      <!-- Experience Section -->
      <section class="mb-16">
        <div class="flex items-center gap-4 mb-8">
          <h2 class="text-2xl font-semibold">Experience</h2>
          <div class="h-px bg-lines flex-1"></div>
        </div>

        <div class="space-y-8">
          <div class="">
            <div
              class="flex flex-col md:flex-row md:items-center md:justify-between mb-2"
            >
              <h3 class="text-xl font-semibold">Senior Full Stack Developer</h3>
              <span class="text-foreground-muted">2024 - Present</span>
            </div>
            <p class="text-primary mb-3">Freelance / Contract / Agency Work</p>
            <ul class="text-foreground-muted space-y-2 max-w-prose">
              <li>
                • Developed responsive web applications using modern frameworks
              </li>
              <li>
                • Collaborated with clients to translate business requirements
                into technical solutions
              </li>
              <li>• Implemented scalable backend systems and APIs</li>
              <li>• Optimized application performance and user experience</li>
            </ul>
          </div>

          <div class="">
            <div
              class="flex flex-col md:flex-row md:items-center md:justify-between mb-2"
            >
              <h3 class="text-xl font-semibold">Senior Full Stack Developer</h3>
              <span class="text-foreground-muted">2019 - 2024</span>
            </div>
            <p class="text-primary mb-3">Allata</p>
            <ul class="text-foreground-muted space-y-2 max-w-prose">
              <li>
                • Built and maintained web applications serving thousands of
                users
              </li>
              <li>• Worked in agile development teams</li>
              <li>• Mentored junior developers and conducted code reviews</li>
              <li>• Integrated third-party APIs and payment systems</li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Skills Section -->
      <section class="mb-16">
        <div class="flex items-center gap-4 mb-8">
          <h2 class="text-2xl font-semibold">Skills</h2>
          <div class="h-px bg-lines flex-1"></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div>
            <h4 class="font-semibold mb-4 text-primary">Frontend</h4>
            <div class="flex flex-wrap gap-2">
              <span
                class="text-xs bg-primary/10 backdrop-blur-sm text-primary px-3 py-1"
                >React</span
              >
              <span
                class="text-xs bg-primary/10 backdrop-blur-sm text-primary px-3 py-1"
                >TypeScript</span
              >
              <span
                class="text-xs bg-primary/10 backdrop-blur-sm text-primary px-3 py-1"
                >JavaScript</span
              >
              <span
                class="text-xs bg-primary/10 backdrop-blur-sm text-primary px-3 py-1"
                >Astro</span
              >
              <span
                class="text-xs bg-primary/10 backdrop-blur-sm text-primary px-3 py-1"
                >Tailwind CSS</span
              >
              <span
                class="text-xs bg-primary/10 backdrop-blur-sm text-primary px-3 py-1"
                >Next.js</span
              >
              <span
                class="text-xs bg-primary/10 backdrop-blur-sm text-primary px-3 py-1"
                >Angular</span
              >
            </div>
          </div>

          <div>
            <h4 class="font-semibold mb-4 text-primary">Backend</h4>
            <div class="flex flex-wrap gap-2">
              <span
                class="text-xs bg-primary/10 backdrop-blur-sm text-primary px-3 py-1"
                >Node.js</span
              >
              <span
                class="text-xs bg-primary/10 backdrop-blur-sm text-primary px-3 py-1"
                >Python</span
              >
              <span
                class="text-xs bg-primary/10 backdrop-blur-sm text-primary px-3 py-1"
                >PostgreSQL</span
              >
              <span
                class="text-xs bg-primary/10 backdrop-blur-sm text-primary px-3 py-1"
                >Express</span
              >
              <span
                class="text-xs bg-primary/10 backdrop-blur-sm text-primary px-3 py-1"
                >MySql</span
              >
            </div>
          </div>

          <div>
            <h4 class="font-semibold mb-4 text-primary">Tools & Others</h4>
            <div class="flex flex-wrap gap-2">
              <span
                class="text-xs bg-primary/10 backdrop-blur-sm text-primary px-3 py-1"
                >Git</span
              >
              <span
                class="text-xs bg-primary/10 backdrop-blur-sm text-primary px-3 py-1"
                >Docker</span
              >
              <span
                class="text-xs bg-primary/10 backdrop-blur-sm text-primary px-3 py-1"
                >AWS</span
              >
              <span
                class="text-xs bg-primary/10 backdrop-blur-sm text-primary px-3 py-1"
                >Figma</span
              >
              <span
                class="text-xs bg-primary/10 backdrop-blur-sm text-primary px-3 py-1"
                >VS Code</span
              >
              <span
                class="text-xs bg-primary/10 backdrop-blur-sm text-primary px-3 py-1"
                >Cloudflare</span
              >
              <span
                class="text-xs bg-primary/10 backdrop-blur-sm text-primary px-3 py-1"
                >Vercel</span
              >
            </div>
          </div>
        </div>
      </section>

      <!-- Education Section -->
      <section class="mb-24">
        <div class="flex items-center gap-4 mb-8">
          <h2 class="text-2xl font-semibold">Education</h2>
          <div class="h-px bg-lines flex-1"></div>
        </div>

        <div class="">
          <div
            class="flex flex-col md:flex-row md:items-center md:justify-between mb-2"
          >
            <h3 class="text-xl font-semibold">
              Bachelor's Degree in Computer Science
            </h3>
            <span class="text-foreground-muted">2021 - Present</span>
          </div>
          <p class="text-primary mb-3">
            Arizona State University <span class="text-foreground-muted"
              >(still in progress)</span
            >
          </p>
          <p class="text-foreground-muted max-w-prose">
            Focused on software engineering, algorithms, and web development.
          </p>
        </div>
      </section>
    </div>
  </div>
</Layout>
